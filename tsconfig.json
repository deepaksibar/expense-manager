{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "exclude": [
    "example",
    "node_modules",
    "dist",
    "build",
    "typings/main",
    "typings/main.d.ts"
  ],
  "filesGlob": [
    "src/**/*.ts",
    "typings/*.d.ts",
    "!src/**/*.d.ts"
  ]
}
